# "\M-l": "ll\n"
# "\M-h": "cdhist\r"

# If you type any text and press Up/Down,
# you can search your history for commands starting
# with that text
# "\e[B": history-search-forward
# "\e[A": history-search-backward

# Use Ctrl or Alt Arrow keys to move along words
# "\e[5C": forward-word
# "\e[5D": backward-word

# "\M-r": forward-search-history

# new settings
# be 8 bit clean
set input-meta on
set output-meta on
set convert-meta off

# # Ctrl+arrows
# "\e[1;5C": forward-word
# "\e[1;5D": backward-word
# 
# # Alt+arrows
# "\e[1;3C": forward-word
# "\e[1;3D": backward-word
# 
# # Vim-style word movement: Alt+[w|e|b]
# "\ew": forward-word
# "\ee": forward-word
# "\eb": backward-word
# 
# # Alt+[h|l]
# "\eh": beginning-of-line
# "\el": end-of-line
# "\M-h": beginning-of-line
# "\M-l": end-of-line
# 
# # Vim-style history search: Alt+[j|k]
# "\ej": history-search-forward
# "\ek": history-search-backward
# "\M-j": history-search-forward
# "\M-k": history-search-backward
# 
# # Alt+r/s instead of Ctrl+r/s
# "\er": reverse-search-history
# "\es": forward-search-history
# "\M-r": reverse-search-history
# "\M-s": forward-search-history
# 
