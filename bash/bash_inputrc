bind 'set bind-tty-special-chars Off'
bind 'set visible-stats on'
bind 'set show-all-if-ambiguous on' # autocomplete with one tab
bind 'set completion-ignore-case on' # case-insensitive autocomplete
bind 'set completion-map-case on' # turns test-dahs to test_dash
bind 'set match-hidden-files off'

# be 8 bit clean
bind 'set input-meta on'
bind 'set output-meta on'
bind 'set convert-meta off'

# Ctrl+arrows
# bind '"\e[1;5C": forward-word'
# bind '"\e[1;5D": backward-word'

# no more leaving home :)
bind '"\C-j": history-search-forward'
bind '"\C-k": history-search-backward'
bind '"\C-h": backward-char'
bind '"\C-l": forward-char'
bind '"\C-u": clear-screen'
bind '"\C-d": backward-kill-word'
bind '"\C-b": backward-word'
bind '"\C-w": forward-word'
bind '"\C-x": forward-backward-delete-char'
